@model ETickets.Models.Movie

<div class="card">
    <img src="~/imgs/@Model.ImgUrl" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Description: </strong>@Model.Description</p>
        <p class="card-text"><strong>Price: </strong>@Model.Price$</p>
        <p class="card-text"><strong>Cinema: </strong>@Model.Cinema.Name</p>
        <p class="card-text"><strong>Category: </strong>@Model.Category.Name</p>
        <p class="card-text"><strong>Status: </strong>@Model.Status</p>
        <p class="card-text"><strong>Start Date: </strong>@Model.StartDate</p>
        <p class="card-text"><strong>End Date: </strong>@Model.EndDate</p>
        <h5>Actors:</h5>
        <ul>
            @foreach (var actor in Model.Actors)
            {
                <li>@actor.FirstName @actor.LastName</li>
            }
        </ul>
        <a href="@Model.TrailerUrl" class="btn btn-primary">Watch Trailer</a>
        <a asp-action="Index" asp-controller="Cart" asp-route-id="@Model.Id" type="button" class="btn btn-outline-light">Book Tickets</a>
    </div>
</div>
